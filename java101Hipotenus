package hipotenus;
import java.util.Scanner;


public class Main {

	public static void main(String[] args) {
		
		int a, b ,c;
		double u, cevre, alan;
		
		Scanner girdi = new Scanner(System.in);
		
		System.out.println("1. Kenarları girin : ");
		a = girdi.nextInt();
		
		System.out.print("2. Kenarları girin : ");
		b= girdi.nextInt();
		
		System.out.print("3. Kenarları girin : ");
		c= girdi.nextInt();
	
		u=(a+b+c)/2;
		cevre=2*u;
		alan=Math.sqrt(u*(u-a)*(u-b)*(u-c));
		
		System.out.println("Üçgenin çevresi : " + cevre);
		System.out.println("Üçgenin alanı : " + alan);
		
		
		
	}

}
